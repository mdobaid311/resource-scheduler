{
  "name": "resource-scheduler",
  "version": "1.0.7",
  "description": "A React-based resource scheduling component with drag-and-drop functionality",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/resource-scheduler.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "style": "./dist/resource-scheduler.css",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/resource-scheduler.css",
    "./dist/resource-scheduler.css": "./dist/resource-scheduler.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build": "npm run build:js && npm run build:types",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "start": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.544.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.1.13"
  },
  "keywords": [
    "react",
    "scheduler",
    "resource-scheduler",
    "calendar",
    "drag-and-drop",
    "booking",
    "appointment",
    "timeline",
    "schedule"
  ],
  "author": "Mohammed Obaid <mdobaid311@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdobaid311/resource-scheduler.git"
  },
  "homepage": "https://github.com/mdobaid311/resource-scheduler#readme",
  "bugs": {
    "url": "https://github.com/mdobaid311/resource-scheduler/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
